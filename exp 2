#include <stdio.h>
#include <unistd.h>
#include <fcntl.h>

int main() {
    int src, dest;
    char buffer[1024];
    ssize_t bytes;

    src = open("source.txt", O_RDONLY);
    dest = open("destination.txt", O_WRONLY | O_CREAT | O_TRUNC, 0644);

    if (src < 0 || dest < 0) {
        perror("File open error");
        return 1;
    }

    while ((bytes = read(src, buffer, sizeof(buffer))) > 0) {
        write(dest, buffer, bytes);
    }

    close(src);
    close(dest);

    return 0;
}
