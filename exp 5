#include <stdio.h>

int main() {
    int n, i, time = 0, completed = 0;
    int at[10], bt[10], rt[10], pr[10];
    int wt[10], tat[10], ct[10];
    int highest, min_pr;
    int isCompleted[10] = {0};

    printf("Enter number of processes: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("Process %d Arrival Time: ", i + 1);
        scanf("%d", &at[i]);
        printf("Process %d Burst Time: ", i + 1);
        scanf("%d", &bt[i]);
        printf("Process %d Priority (lower number = higher priority): ", i + 1);
        scanf("%d", &pr[i]);
        rt[i] = bt[i];
    }

    while (completed < n) {
        highest = -1;
        min_pr = 9999;

        for (i = 0; i < n; i++) {
            if (at[i] <= time && !isCompleted[i] && pr[i] < min_pr && rt[i] > 0) {
                min_pr = pr[i];
                highest = i;
            }
        }

        if (highest == -1) {
            time++;
            continue;
        }

        rt[highest]--;
        time++;

        if (rt[highest] == 0) {
            ct[highest] = time;
            tat[highest] = ct[highest] - at[highest];
            wt[highest] = tat[highest] - bt[highest];
            isCompleted[highest] = 1;
            completed++;
        }
    }

    printf("\nProcess\tAT\tBT\tPR\tWT\tTAT\n");
    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t%d\t%d\n",
               i + 1, at[i], bt[i], pr[i], wt[i], tat[i]);
    }

    return 0;
}

