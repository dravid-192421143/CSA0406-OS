#include <stdio.h>
#include <sys/stat.h>
#include <unistd.h>
#include <pwd.h>
#include <grp.h>

int main() {
    char filename[100];
    struct stat fileStat;

    printf("Enter the filename: ");
    scanf("%s", filename);

    if (stat(filename, &fileStat) < 0) {
        perror("stat");
        return 1;
    }

    printf("\nFile: %s\n", filename);

    // Owner info
    struct passwd *pw = getpwuid(fileStat.st_uid);
    printf("Owner: %s\n", pw->pw_name);

    // Group info
    struct group *gr = getgrgid(fileStat.st_gid);
    printf("Group: %s\n", gr->gr_name);

    // Permissions
    printf("Permissions: ");
    printf( (S_ISDIR(fileStat.st_mode)) ? "d" : "-");
    printf( (fileStat.st_mode & S_IRUSR) ? "r" : "-");
    printf( (fileStat.st_mode & S_IWUSR) ? "w" : "-");
    printf( (fileStat.st_mode & S_IXUSR) ? "x" : "-");
    printf( (fileStat.st_mode & S_IRGRP) ? "r" : "-");
    printf( (fileStat.st_mode & S_IWGRP) ? "w" : "-");
    printf( (fileStat.st_mode & S_IXGRP) ? "x" : "-");
    printf( (fileStat.st_mode & S_IROTH) ? "r" : "-");
    printf( (fileStat.st_mode & S_IWOTH) ? "w" : "-");
    printf( (fileStat.st_mode & S_IXOTH) ? "x" : "-");
    printf("\n");

    // Access check
    printf("\nAccess check for current user:\n");
    printf("Read: %s\n", (access(filename, R_OK) == 0) ? "Yes" : "No");
    printf("Write: %s\n", (access(filename, W_OK) == 0) ? "Yes" : "No");
    printf("Execute: %s\n", (access(filename, X_OK) == 0) ? "Yes" : "No");

    return 0;
}
